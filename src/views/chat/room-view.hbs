<div>
  <h1 class="text-center">Room view</h1>

  {{#if room}}
  <h2 class="text-center">{{room.room_name}}</h2>
  {{/if}}

  {{#if message}}
  <div class="alert alert-danger">
    <p>{{message}}</p>
  </div>
  {{/if}}
  
  <p class="text-center">Mensajes</p>
  <div class="card">
    <div class="card-body" id="chat-box">
    </div>
  </div>
  <form class="mt-3" id="send-message-form">
    <div class="input-group mb-3">
      <input id="message-input" type="text" class="form-control" placeholder="Escribe un mensaje" aria-label="Escribe un mensaje" aria-describedby="button-send-msg">
      <button class="btn btn-outline-secondary" type="submit" id="button-send-msg">Button</button>
    </div>
  </form>
</div>

<script src="/js/room-view.js"></script>
